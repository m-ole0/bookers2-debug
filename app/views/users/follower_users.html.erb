<h1>Follower Users</h1>

<% if @users.any? %>
  <table class= 'table'>
    <thead>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td>フォロー数:<%= user.followed_users.count %></td>
          <td>フォロワー数:<%= user.follower_users.count %></td>
          <td><%= link_to "Show",user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>